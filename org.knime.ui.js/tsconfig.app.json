{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["src/**/*", "src/**/*.vue"],
  "exclude": [
    "src/**/__tests__/*",
    "node_modules/@knime/**/*.ts",
    "node_modules/@knime/**/*.vue",
    "**/node_modules/*"
  ],
  "compilerOptions": {
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@api": ["./src/api/index"]
    },
    "strict": true,
    "allowJs": true,
    "skipLibCheck": true,
    "types": ["@tiptap/extension-link"]
  }
}
