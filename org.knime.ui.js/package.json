{
  "name": "knime-ui",
  "version": "0.0.0-unused+see-pom.xml",
  "description": "KNIME HTML based UI",
  "author": "KNIME AG",
  "scripts": {
    "dev": "vite",
    "build": "npm run generate-css && vite build",
    "serve": "vite preview",
    "postinstall": "npm run opensourcecredits -- --no-overwrite && npm run generate-css",
    "lint": "npm run lint:js && npm run lint:css && npm run lint:json",
    "lint:ci": "eslint --ext .js,.ts,.json . -f json -o target/eslint.json || true; stylelint '**/*.css' -f json -o target/stylelint.json || true",
    "lint:js": "eslint --ext .js,.mjs,.vue .",
    "lint:json": "eslint --ext .json --no-error-on-unmatched-pattern .",
    "lint:css": "stylelint '**/*.{css,vue}'",
    "audit": "check-audit --production",
    "audit:ci": "check-audit --production --json > target/audit.json || true",
    "audit:resolve": "resolve-audit --production",
    "test:unit": "jest",
    "coverage": "npm run test:unit -- --coverage --no-cache",
    "coverage:watch": "npm run test:unit -- --coverage --watch",
    "opensourcecredits": "npm run --prefix webapps-common opensourcecredits",
    "generate-css": "node ./buildtools/generateCSS.mjs"
  },
  "dependencies": {
    "@fontsource/roboto": "4.5.3",
    "@fontsource/roboto-condensed": "4.5.4",
    "@fontsource/roboto-mono": "4.5.3",
    "@knime/ui-extension-service": "^0.1.0",
    "consola": "2.15.3",
    "fuse.js": "6.5.3",
    "gsap": "3.8.0",
    "lodash": "4.17.21",
    "mitt": "^3.0.0",
    "raf-throttle": "2.0.5",
    "vue": "^3.2.40",
    "vue3-click-away": "^1.2.4",
    "vuex": "^4.0.2",
    "webapps-common": "file:webapps-common"
  },
  "devDependencies": {
    "@knime/eslint-config": "^7.0.1",
    "@types/jest": "^28.1.8",
    "@vitejs/plugin-vue": "^3.1.2",
    "eslint": "7.32.0",
    "file-loader": "^6.2.0",
    "jest": "^28.1.3",
    "jest-environment-jsdom": "^29.0.3",
    "jest-junit": "14.0.0",
    "jest-transform-stub": "2.0.0",
    "jest-useragent-mock": "0.1.1",
    "modern-normalize": "1.1.0",
    "npm-audit-resolver": "2.3.1",
    "postcss-html": "^1.5.0",
    "postcss-import": "14.1.0",
    "postcss-preset-env": "7.8.1",
    "postcss-url": "10.1.3",
    "stylelint": "^14.12.1",
    "stylelint-config-recommended-vue": "^1.4.0",
    "stylelint-config-standard": "20.0.0",
    "url-loader": "^4.1.1",
    "vite": "^3.1.0",
    "vite-svg-loader": "^3.6.0"
  },
  "engines": {
    "node": "18.x"
  },
  "private": true,
  "volta": {
    "node": "18.8.0"
  }
}
